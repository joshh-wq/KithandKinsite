<div class="sticky-banner" id="sticky-banner">
  <div class="container">
    <p class="banner-text">
      <strong>Join the Founding 100</strong> â€” Get lifetime membership + voting rights for $50
    </p>
    <a href="#founding" class="btn btn-primary btn-small">
      Become a Founder
    </a>
    <button class="banner-close" id="banner-close" aria-label="Close banner">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<style>
  .sticky-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--sage);
    color: var(--white);
    padding: 0.75rem 0;
    z-index: 1000;
    transform: translateY(-100%);
    transition: transform 0.3s ease;
  }

  .sticky-banner.visible {
    transform: translateY(0);
  }

  .sticky-banner.hidden {
    display: none;
  }

  .sticky-banner .container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
  }

  .banner-text {
    color: var(--white);
    font-size: 0.9375rem;
    margin: 0;
  }

  .banner-text strong {
    color: var(--white);
  }

  .btn-small {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .banner-close {
    background: none;
    border: none;
    color: var(--white);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .banner-close:hover {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .banner-text {
      font-size: 0.8125rem;
    }

    .sticky-banner .container {
      gap: var(--space-sm);
    }

    .btn-small {
      padding: 0.375rem 0.75rem;
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 480px) {
    .banner-text {
      display: none;
    }

    .sticky-banner .container::before {
      content: "Join the Founding 100";
      color: var(--white);
      font-size: 0.875rem;
      font-weight: 500;
    }
  }
</style>

<script>
  const banner = document.getElementById('sticky-banner');
  const closeBtn = document.getElementById('banner-close');
  const heroSection = document.querySelector('.hero');

  // Check if banner was previously dismissed
  const bannerDismissed = sessionStorage.getItem('bannerDismissed');

  if (!bannerDismissed && banner && heroSection) {
    // Show banner after scrolling past hero
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (!entry.isIntersecting) {
          banner.classList.add('visible');
        } else {
          banner.classList.remove('visible');
        }
      });
    }, { threshold: 0 });

    observer.observe(heroSection);
  }

  closeBtn?.addEventListener('click', () => {
    banner?.classList.add('hidden');
    sessionStorage.setItem('bannerDismissed', 'true');
  });
</script>
