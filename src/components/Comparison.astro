---
const comparisons = [
  { ours: "Time-bound", theirs: "Endless" },
  { ours: "Your inner circle", theirs: "Everyone + strangers" },
  { ours: "Real depth", theirs: "Performative posts" },
  { ours: "No ads or influencers", theirs: "Ads & Influencers" },
  { ours: "$20 once", theirs: "Your data & privacy" },
];
---

<section class="comparison">
  <div class="container-narrow">
    <h2 class="text-center mb-xl reveal">What makes us different</h2>

    <div class="comparison-table reveal reveal-delay-1">
      <div class="comparison-header">
        <div class="comparison-col comparison-ours">
          <span class="label">Kith & Kin</span>
        </div>
        <div class="comparison-col comparison-vs">vs.</div>
        <div class="comparison-col comparison-theirs">
          <span class="label">Social Media</span>
        </div>
      </div>

      {comparisons.map((row) => (
        <div class="comparison-row">
          <div class="comparison-col comparison-ours">
            <span class="value value-good">{row.ours}</span>
          </div>
          <div class="comparison-col comparison-vs"></div>
          <div class="comparison-col comparison-theirs">
            <span class="value value-bad">{row.theirs}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .comparison {
    background-color: var(--white);
    padding: var(--space-3xl) 0;
  }

  .comparison-table {
    background-color: var(--cream-light);
    border-radius: 1rem;
    overflow: hidden;
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background-color: var(--cream);
    border-bottom: 1px solid var(--border);
  }

  .comparison-header .label {
    font-family: var(--font-serif);
    font-weight: 600;
    font-size: 1rem;
  }

  .comparison-header .comparison-ours .label {
    color: var(--sage);
  }

  .comparison-header .comparison-theirs .label {
    color: var(--text-muted);
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .comparison-col {
    display: flex;
    align-items: center;
  }

  .comparison-ours {
    justify-content: flex-start;
  }

  .comparison-vs {
    color: var(--text-muted);
    font-size: 0.875rem;
    padding: 0 var(--space-sm);
  }

  .comparison-theirs {
    justify-content: flex-end;
    text-align: right;
  }

  .value {
    font-size: 1rem;
  }

  .value-good {
    color: var(--sage);
    font-weight: 500;
  }

  .value-bad {
    color: var(--text-muted);
  }

  @media (max-width: 600px) {
    .comparison-header,
    .comparison-row {
      padding: var(--space-sm) var(--space-md);
    }

    .value {
      font-size: 0.9375rem;
    }
  }
</style>
