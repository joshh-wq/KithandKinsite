<section class="hero">
  <div class="container">
    <div class="hero-content">
      <p class="hero-brand reveal visible">Kith & Kin</p>
      <div class="hero-divider reveal visible reveal-delay-1"></div>
      <h1 class="reveal visible reveal-delay-2">
        <span class="hero-setup">A social app designed for closeness</span>
        <span class="text-brown hero-main">Stay close to your people.</span>
      </h1>
      <p class="hero-subtitle reveal visible reveal-delay-3">
        Built as a member-owned digital co-op.<br />
        No ads, no data mining, no outside investors.<br />
        Just us.
      </p>
      </div>
    <div class="hero-image reveal visible reveal-delay-2">
      <div class="phone-mockup">
        <img src="/screenshots/KithandKin_signin.png" alt="Kith & Kin sign in screen" class="screenshot" />
        <div class="phone-glare"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--space-xl) 0 var(--space-3xl);
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .hero-brand {
    font-family: var(--font-sans);
    font-size: 6rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: var(--space-sm);
    letter-spacing: -0.04em;
  }

  .hero-divider {
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, var(--brown-light), var(--brown-dark), var(--brown-light));
    margin: 0 auto var(--space-md);
    border-radius: 2px;
    opacity: 0.8;
  }

  .hero-content h1 {
    line-height: 1.1;
    margin-bottom: var(--space-md);
  }

  .hero-setup {
    font-size: 1.125rem;
    color: var(--text-muted);
    font-weight: 600;
    display: block;
    margin-bottom: 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-main {
    font-size: 3.5rem;
    font-weight: 700;
    display: block;
    margin-top: 0.125rem;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    line-height: 1.5;
  }

  .arrow {
    transition: transform 0.2s ease;
  }

  .btn:hover .arrow {
    transform: translateX(4px);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .phone-mockup {
    width: 280px;
    height: 580px;
    background: var(--sage);
    border-radius: 40px;
    padding: 12px;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 25px 50px -12px rgba(31, 41, 33, 0.15),
      0 0 0 1px rgba(31, 41, 33, 0.05);
  }

  .phone-glare {
    position: absolute;
    top: 12px;
    left: 12px;
    right: 12px;
    bottom: 12px;
    border-radius: 32px;
    background: linear-gradient(
      115deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 3;
  }

  .screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 32px;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 900px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-brand {
      font-size: 4rem;
    }

    .hero-setup {
      font-size: 1rem;
    }

    .hero-main {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    
    
    .phone-mockup {
      width: 240px;
      height: 500px;
    }
  }
</style>
