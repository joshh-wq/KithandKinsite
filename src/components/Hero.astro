<section class="hero">
  <div class="container">
    <div class="hero-content">
      <p class="hero-brand">Kith & Kin</p>
      <h1>
        <span class="hero-setup">No matter what's happening.</span>
        <span class="text-brown hero-main">Stay close to your people.</span>
      </h1>
      <p class="hero-subtitle">
        Time-bound sessions. Real connections.<br />
        No endless scrolling.
      </p>
      <a href="#waitlist" class="btn btn-primary">
        Join the waitlist
        <span class="arrow">&rarr;</span>
      </a>
    </div>
    <div class="hero-image">
      <div class="phone-mockup">
        <img src="/screenshots/KithandKin_signin.png" alt="Kith & Kin sign in screen" class="screenshot" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .hero-brand {
    font-family: var(--font-sans);
    font-size: 4.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: var(--space-sm);
    letter-spacing: -0.04em;
  }

  .hero-content h1 {
    line-height: 1.1;
    margin-bottom: var(--space-md);
  }

  .hero-setup {
    font-size: 1.125rem;
    color: var(--text-muted);
    font-weight: 600;
    display: block;
    margin-bottom: 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-main {
    font-size: 3.5rem;
    font-weight: 700;
    display: block;
    margin-top: 0.125rem;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    line-height: 1.5;
  }

  .arrow {
    transition: transform 0.2s ease;
  }

  .btn:hover .arrow {
    transform: translateX(4px);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .phone-mockup {
    width: 280px;
    height: 580px;
    background: var(--sage);
    border-radius: 40px;
    padding: 12px;
    box-shadow:
      0 25px 50px -12px rgba(31, 41, 33, 0.15),
      0 0 0 1px rgba(31, 41, 33, 0.05);
  }

  .screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 32px;
  }

  @media (max-width: 900px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-brand {
      font-size: 3.5rem;
    }

    .hero-setup {
      font-size: 1rem;
    }

    .hero-main {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-subtitle br {
      display: none;
    }

    
    .phone-mockup {
      width: 240px;
      height: 500px;
    }
  }
</style>
