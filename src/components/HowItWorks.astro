---
const steps = [
  {
    number: "1",
    title: "Choose your time",
    description: "Set a session for 1-15 minutes. No endless scrolling. You're in control.",
    screenshot: "/screenshots/home-timer.png"
  },
  {
    number: "2",
    title: "Connect with intention",
    description: "Take your time. Notice. Be present. You can reach out to your people after the session.",
    screenshot: "/screenshots/session-photo.jpg"
  },
  {
    number: "3",
    title: "Share what matters",
    description: "Photos, memories, gratitude, notes from people you actually know and care about.",
    screenshot: "/screenshots/content-types.png"
  }
];

const comparisons = [
  { ours: "Time-bound", theirs: "Endless" },
  { ours: "Your inner circle", theirs: "Everyone + strangers" },
  { ours: "Real depth", theirs: "Performative posts" },
  { ours: "No ads or influencers", theirs: "Ads & Influencers" },
];

const features = [
  {
    icon: "timer",
    title: "Timed Browsing Sessions",
    description: "Choose a session length (1-15 minutes) and browse a curated, shuffled mix of photos from your people. When time's up, you stop. Intentional, not addictive."
  },
  {
    icon: "summary",
    title: '"What Resonated" Summary',
    description: "After each session, see who you spent time with and get prompted to reach out—send a note, share a memory, or let them know you're thinking of them."
  },
  {
    icon: "share",
    title: "Four Ways to Share",
    description: "Moments (photos), Notes (30 words max), Memories (shared experiences), and Gratitude (appreciation that lands differently)."
  },
  {
    icon: "people",
    title: "People-Centric Activity",
    description: "No notification spam. Your Activity screen groups everything by person—what they sent, viewed, and reacted to—so you see relationships, not alerts."
  },
  {
    icon: "intro",
    title: "Introductions",
    description: "Introduce two people who should know each other. Add a personal note about why. Limited to 3 per month so each one is meaningful."
  },
  {
    icon: "fade",
    title: "Moments Fade After 60 Days",
    description: "Your feed stays fresh. Old moments automatically clear out, so what people see is recent and relevant—not a permanent archive."
  }
];
---

<section class="how-it-works">
  <div class="container">
    <h2 class="text-center mb-xl reveal">How It Works</h2>

    <div class="steps">
      {steps.map((step, index) => (
        <div class="step reveal" class:list={[{ 'step-reverse': index % 2 === 1 }]}>
          <div class="step-content">
            <span class="step-number">{step.number}</span>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
          <div class="step-image">
            <div class="phone-mockup-small">
              {step.screenshot ? (
                <img src={step.screenshot} alt={step.title} class="screenshot" />
              ) : (
                <div class="screenshot-placeholder">
                  <span>{step.placeholder}</span>
                </div>
              )}
              <div class="phone-glare"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="features-wrapper">
      <h3 class="text-center reveal">Key Features</h3>
      <div class="features-grid">
        {features.map((feature, index) => (
          <div class={`feature reveal reveal-delay-${(index % 3) + 1}`}>
            <div class="feature-icon" data-icon={feature.icon}>
              {feature.icon === "timer" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              )}
              {feature.icon === "summary" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              )}
              {feature.icon === "share" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
              )}
              {feature.icon === "people" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
              {feature.icon === "intro" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="8.5" cy="7" r="4"></circle>
                  <line x1="20" y1="8" x2="20" y2="14"></line>
                  <line x1="23" y1="11" x2="17" y2="11"></line>
                </svg>
              )}
              {feature.icon === "fade" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 6v6l4 2"></path>
                </svg>
              )}
            </div>
            <h4>{feature.title}</h4>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="comparison-wrapper">
      <h3 class="text-center reveal">What makes us different</h3>

      <div class="comparison-table reveal reveal-delay-1">
        <div class="comparison-header">
          <div class="comparison-col comparison-ours">
            <span class="label">Kith & Kin</span>
          </div>
          <div class="comparison-col comparison-vs">vs.</div>
          <div class="comparison-col comparison-theirs">
            <span class="label">Social Media</span>
          </div>
        </div>

        {comparisons.map((row) => (
          <div class="comparison-row">
            <div class="comparison-col comparison-ours">
              <span class="value value-good">{row.ours}</span>
            </div>
            <div class="comparison-col comparison-vs"></div>
            <div class="comparison-col comparison-theirs">
              <span class="value value-bad">{row.theirs}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .how-it-works {
    padding: var(--space-3xl) 0;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .step {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .step-reverse .step-content {
    order: 2;
  }

  .step-reverse .step-image {
    order: 1;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--sage);
    color: var(--white);
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    border-radius: 50%;
    margin-bottom: var(--space-sm);
  }

  .step h3 {
    color: var(--text-dark);
    margin-bottom: var(--space-xs);
  }

  .step p {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .step-image {
    display: flex;
    justify-content: center;
  }

  .phone-mockup-small {
    width: 240px;
    height: 500px;
    background: var(--sage);
    border-radius: 36px;
    padding: 10px;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 15px 30px -8px rgba(31, 41, 33, 0.12),
      0 0 0 1px rgba(31, 41, 33, 0.05);
  }

  .phone-glare {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border-radius: 24px;
    background: linear-gradient(
      115deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 3;
  }

  .screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 24px;
    position: relative;
    z-index: 1;
  }

  .screenshot-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(145deg, var(--cream) 0%, var(--sage-light) 100%);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-light);
    font-size: 0.8125rem;
    text-align: center;
    padding: var(--space-sm);
  }

  /* Features section */
  .features-wrapper {
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--border);
  }

  .features-wrapper h3 {
    margin-bottom: var(--space-xl);
    color: var(--brown-dark);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .feature {
    background: var(--white);
    border-radius: 1rem;
    padding: var(--space-lg);
    box-shadow: 0 2px 8px rgba(31, 41, 33, 0.06);
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    background: var(--sage-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-md);
    color: var(--sage);
  }

  .feature h4 {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: var(--space-xs);
  }

  .feature p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-muted);
  }

  /* Comparison section */
  .comparison-wrapper {
    margin-top: var(--space-3xl);
    max-width: var(--max-width-narrow);
    margin-left: auto;
    margin-right: auto;
  }

  .comparison-wrapper h3 {
    margin-bottom: var(--space-lg);
    color: var(--brown-dark);
  }

  .comparison-table {
    background-color: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(31, 41, 33, 0.05);
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background-color: var(--cream-light);
    border-bottom: 1px solid var(--border);
  }

  .comparison-header .label {
    font-family: var(--font-serif);
    font-weight: 600;
    font-size: 1rem;
  }

  .comparison-header .comparison-ours .label {
    color: var(--sage);
  }

  .comparison-header .comparison-theirs .label {
    color: var(--text-muted);
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .comparison-col {
    display: flex;
    align-items: center;
  }

  .comparison-ours {
    justify-content: flex-start;
  }

  .comparison-vs {
    color: var(--text-muted);
    font-size: 0.875rem;
    padding: 0 var(--space-sm);
  }

  .comparison-theirs {
    justify-content: flex-end;
    text-align: right;
  }

  .value {
    font-size: 1rem;
  }

  .value-good {
    color: var(--sage);
    font-weight: 500;
  }

  .value-bad {
    color: var(--text-muted);
  }

  @media (max-width: 900px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .step {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .step-reverse .step-content,
    .step-reverse .step-image {
      order: unset;
    }

    .step-content {
      order: -1;
    }

    .phone-mockup-small {
      width: 260px;
      height: 540px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
  }

  @media (max-width: 600px) {
    .comparison-header,
    .comparison-row {
      padding: var(--space-sm) var(--space-md);
    }

    .value {
      font-size: 0.9375rem;
    }
  }
</style>
