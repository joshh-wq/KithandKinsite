---
const steps = [
  {
    number: "1",
    title: "Choose your time",
    description: "Set a session for 1-15 minutes. No endless scrolling. You're in control.",
    screenshot: "/screenshots/home-timer.png"
  },
  {
    number: "2",
    title: "Connect with intention",
    description: "Take your time. Notice. Be present. You can reach out to your people after the session.",
    screenshot: "/screenshots/session-photo.jpg"
  },
  {
    number: "3",
    title: "Share what matters",
    description: "Photos, memories, gratitude, notes from people you actually know and care about.",
    screenshot: "/screenshots/content-types.png"
  }
];

const comparisons = [
  { ours: "Time-bound", theirs: "Endless" },
  { ours: "Your inner circle", theirs: "Everyone + strangers" },
  { ours: "Real depth", theirs: "Performative posts" },
  { ours: "No ads or influencers", theirs: "Ads & Influencers" },
];
---

<section class="how-it-works">
  <div class="container">
    <h2 class="text-center mb-xl reveal">How It Works</h2>

    <div class="steps">
      {steps.map((step, index) => (
        <div class="step reveal" class:list={[{ 'step-reverse': index % 2 === 1 }]}>
          <div class="step-content">
            <span class="step-number">{step.number}</span>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
          <div class="step-image">
            <div class="phone-mockup-small">
              {step.screenshot ? (
                <img src={step.screenshot} alt={step.title} class="screenshot" />
              ) : (
                <div class="screenshot-placeholder">
                  <span>{step.placeholder}</span>
                </div>
              )}
              <div class="phone-glare"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="comparison-wrapper">
      <h3 class="text-center reveal">What makes us different</h3>

      <div class="comparison-table reveal reveal-delay-1">
        <div class="comparison-header">
          <div class="comparison-col comparison-ours">
            <span class="label">Kith & Kin</span>
          </div>
          <div class="comparison-col comparison-vs">vs.</div>
          <div class="comparison-col comparison-theirs">
            <span class="label">Social Media</span>
          </div>
        </div>

        {comparisons.map((row) => (
          <div class="comparison-row">
            <div class="comparison-col comparison-ours">
              <span class="value value-good">{row.ours}</span>
            </div>
            <div class="comparison-col comparison-vs"></div>
            <div class="comparison-col comparison-theirs">
              <span class="value value-bad">{row.theirs}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .how-it-works {
    padding: var(--space-3xl) 0;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .step {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .step-reverse .step-content {
    order: 2;
  }

  .step-reverse .step-image {
    order: 1;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--sage);
    color: var(--white);
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    border-radius: 50%;
    margin-bottom: var(--space-sm);
  }

  .step h3 {
    color: var(--text-dark);
    margin-bottom: var(--space-xs);
  }

  .step p {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .step-image {
    display: flex;
    justify-content: center;
  }

  .phone-mockup-small {
    width: 240px;
    height: 500px;
    background: var(--sage);
    border-radius: 36px;
    padding: 10px;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 15px 30px -8px rgba(31, 41, 33, 0.12),
      0 0 0 1px rgba(31, 41, 33, 0.05);
  }

  .phone-glare {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border-radius: 24px;
    background: linear-gradient(
      115deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 3;
  }

  .screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 24px;
    position: relative;
    z-index: 1;
  }

  .screenshot-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(145deg, var(--cream) 0%, var(--sage-light) 100%);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-light);
    font-size: 0.8125rem;
    text-align: center;
    padding: var(--space-sm);
  }

  /* Comparison section */
  .comparison-wrapper {
    margin-top: var(--space-3xl);
    max-width: var(--max-width-narrow);
    margin-left: auto;
    margin-right: auto;
  }

  .comparison-wrapper h3 {
    margin-bottom: var(--space-lg);
    color: var(--brown-dark);
  }

  .comparison-table {
    background-color: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(31, 41, 33, 0.05);
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background-color: var(--cream-light);
    border-bottom: 1px solid var(--border);
  }

  .comparison-header .label {
    font-family: var(--font-serif);
    font-weight: 600;
    font-size: 1rem;
  }

  .comparison-header .comparison-ours .label {
    color: var(--sage);
  }

  .comparison-header .comparison-theirs .label {
    color: var(--text-muted);
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .comparison-col {
    display: flex;
    align-items: center;
  }

  .comparison-ours {
    justify-content: flex-start;
  }

  .comparison-vs {
    color: var(--text-muted);
    font-size: 0.875rem;
    padding: 0 var(--space-sm);
  }

  .comparison-theirs {
    justify-content: flex-end;
    text-align: right;
  }

  .value {
    font-size: 1rem;
  }

  .value-good {
    color: var(--sage);
    font-weight: 500;
  }

  .value-bad {
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .step {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .step-reverse .step-content,
    .step-reverse .step-image {
      order: unset;
    }

    .step-content {
      order: -1;
    }

    .phone-mockup-small {
      width: 260px;
      height: 540px;
    }
  }

  @media (max-width: 600px) {
    .comparison-header,
    .comparison-row {
      padding: var(--space-sm) var(--space-md);
    }

    .value {
      font-size: 0.9375rem;
    }
  }
</style>
